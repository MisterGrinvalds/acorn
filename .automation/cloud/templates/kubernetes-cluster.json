{
    "name": "k8s-cluster",
    "description": "Kubernetes cluster deployment across cloud providers",
    "version": "1.0.0",
    "providers": ["aws", "azure", "digitalocean"],
    
    "aws": {
        "cluster_name": "my-eks-cluster",
        "region": "us-west-2",
        "kubernetes_version": "1.27",
        "node_groups": [
            {
                "name": "workers",
                "instance_types": ["t3.medium"],
                "min_size": 1,
                "max_size": 5,
                "desired_size": 3
            }
        ],
        "addons": ["vpc-cni", "coredns", "kube-proxy"],
        "logging": ["api", "audit", "authenticator"]
    },
    
    "azure": {
        "cluster_name": "my-aks-cluster", 
        "resource_group": "k8s-cluster-rg",
        "location": "eastus",
        "kubernetes_version": "1.27",
        "node_pools": [
            {
                "name": "workers",
                "vm_size": "Standard_DS2_v2",
                "node_count": 3,
                "min_count": 1,
                "max_count": 5,
                "enable_auto_scaling": true
            }
        ],
        "addons": {
            "monitoring": true,
            "http_application_routing": false
        },
        "network_plugin": "azure"
    },
    
    "digitalocean": {
        "cluster_name": "my-doks-cluster",
        "region": "nyc1",
        "kubernetes_version": "1.27",
        "node_pools": [
            {
                "name": "workers",
                "size": "s-2vcpu-2gb",
                "count": 3,
                "min_nodes": 1,
                "max_nodes": 5,
                "auto_scale": true
            }
        ],
        "maintenance_window": {
            "day": "sunday",
            "start": "02:00",
            "duration": "4h00m0s"
        },
        "auto_upgrade": true
    },
    
    "configuration": {
        "networking": {
            "service_cidr": "10.245.0.0/16",
            "pod_cidr": "10.244.0.0/16",
            "network_policy": "calico"
        },
        "security": {
            "rbac": true,
            "pod_security_policy": true,
            "network_policy": true
        },
        "monitoring": {
            "prometheus": true,
            "grafana": true,
            "logging": true
        },
        "ingress": {
            "controller": "nginx",
            "ssl_termination": true,
            "cert_manager": true
        }
    },
    
    "applications": [
        {
            "name": "nginx-ingress",
            "type": "helm",
            "chart": "ingress-nginx/ingress-nginx",
            "namespace": "ingress-nginx"
        },
        {
            "name": "cert-manager",
            "type": "helm", 
            "chart": "jetstack/cert-manager",
            "namespace": "cert-manager"
        },
        {
            "name": "prometheus-stack",
            "type": "helm",
            "chart": "prometheus-community/kube-prometheus-stack",
            "namespace": "monitoring"
        }
    ]
}