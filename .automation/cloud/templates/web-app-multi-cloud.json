{
    "name": "web-app",
    "description": "Multi-cloud web application deployment",
    "version": "1.0.0",
    "providers": ["aws", "azure", "digitalocean"],
    
    "aws": {
        "instance_type": "t3.micro",
        "region": "us-east-1", 
        "ami": "ami-0c02fb55956c7d316",
        "security_groups": ["web-sg"],
        "key_name": "my-key-pair",
        "tags": {
            "Name": "web-app-aws",
            "Environment": "production",
            "Project": "multi-cloud-demo"
        }
    },
    
    "azure": {
        "vm_size": "Standard_B1s",
        "location": "eastus",
        "image": "UbuntuLTS",
        "resource_group": "web-app-rg",
        "admin_username": "azureuser",
        "tags": {
            "Environment": "production",
            "Project": "multi-cloud-demo"
        }
    },
    
    "digitalocean": {
        "size": "s-1vcpu-1gb",
        "region": "nyc3",
        "image": "ubuntu-22-04-x64",
        "tags": ["web", "production", "multi-cloud-demo"],
        "monitoring": true,
        "private_networking": true
    },
    
    "configuration": {
        "application": {
            "type": "web",
            "runtime": "python",
            "framework": "fastapi"
        },
        "networking": {
            "ports": [80, 443, 22],
            "protocols": ["http", "https", "ssh"]
        },
        "security": {
            "firewall": true,
            "ssl": true,
            "monitoring": true
        },
        "scaling": {
            "auto_scaling": false,
            "min_instances": 1,
            "max_instances": 3
        },
        "backup": {
            "enabled": true,
            "frequency": "daily",
            "retention": "30d"
        }
    },
    
    "deployment": {
        "strategy": "rolling",
        "health_check": {
            "endpoint": "/health",
            "timeout": 30,
            "interval": 60
        },
        "environment_variables": {
            "APP_ENV": "production",
            "LOG_LEVEL": "info"
        }
    }
}